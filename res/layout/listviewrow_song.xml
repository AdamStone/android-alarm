<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:duplicateParentState="true" >
    <!--android:background="@drawable/selector_list_item" -->
    
    <ImageView 
        android:id="@+id/song_row_icon"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_marginLeft="10dip"
        android:src="@drawable/selector_headphone_icon"
		android:contentDescription="headphones icon"
		android:duplicateParentState="true" />
    
    <TextView
        android:id="@+id/song_row_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_toRightOf="@id/song_row_icon"
        android:layout_marginTop="5dip" />
    
    <TextView
        android:id="@+id/song_row_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/song_row_name"
        android:layout_toRightOf="@id/song_row_icon" />
        

</RelativeLayout>
