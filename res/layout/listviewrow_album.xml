<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <ImageView 
        android:id="@+id/album_row_icon"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:src="@drawable/ic_folder"
		android:contentDescription="folder icon"/>
    
    <TextView
        android:id="@+id/album_row_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_toRightOf="@id/album_row_icon"
        android:layout_marginTop="5dip" />
    
    <TextView
        android:id="@+id/album_row_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/album_row_name"
        android:layout_toRightOf="@id/album_row_icon" />    
        

</RelativeLayout>
